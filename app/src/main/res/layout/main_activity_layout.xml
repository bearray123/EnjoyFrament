<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="20dp"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="8dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        >
      <Button
          android:id="@+id/test_kotlin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:textAllCaps="false"
          android:text="Kotlin"
          />
      <Button
          android:id="@+id/test_touch_event"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:textAllCaps="false"
          android:text="Touch测试"
          />
      <Button
          android:id="@+id/test_fragment_entry"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="Fragment生命周期"
          />
      <Button
          android:id="@+id/test_dialog"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:onClick="onDialogEntryClicked"
          android:text="Dialog"
          tools:ignore="UsingOnClickInXml"
          />
      <Button
          android:id="@+id/test_viewpager2"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:onClick="onViewPager2Clicked"
          android:text="ViewPager2（游戏素材）"
          tools:ignore="UsingOnClickInXml"
          />
      <Button
          android:id="@+id/test_layoutparams"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="测试layoutParams(UI三部曲)"
          />
      <Button
          android:id="@+id/test_json_parser"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="Json解析"
          />
      <Button
          android:id="@+id/open_didi_app"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="打开滴滴出行"
          />
      <Button
          android:id="@+id/test_scroll"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="ScrollView"
          />
      <Button
          android:id="@+id/open_coroutine_test_page"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="Deep into Coroutine"
          />
      <Button
          android:id="@+id/ui_hierarchy_test"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="模拟视图层级"
          />
      <Button
          android:id="@+id/scrollViewX"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="NestedScrollling嵌套滚动协议"
          />
      <Button
          android:id="@+id/todo2"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="玩Glide"
          />
      <Button
          android:id="@+id/todo3"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="TODO_Button3"
          />
      <Button
          android:id="@+id/todo4"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="TODO_Button4"
          />
      <Button
          android:id="@+id/todo5"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="TODO_Button5"
          />
      <Button
          android:id="@+id/todo6"
          android:textAllCaps="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="50dp"
          android:layout_marginRight="50dp"
          android:layout_marginTop="10dp"
          android:text="TODO_Button6"
          />

    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>