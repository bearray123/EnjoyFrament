<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/round_cornor_shape">

  <ImageView
      android:id="@+id/hero_img"
      android:layout_width="100dp"
      android:layout_height="70dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:background="#FAF1345"
      />
  <TextView
      android:id="@+id/hero_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      app:layout_constraintTop_toTopOf="@id/hero_img"
      android:layout_marginTop="8dp"
      android:layout_marginStart="5dp"
      android:textSize="14sp"
      android:text="default name"
      />
  <TextView
      android:id="@+id/hero_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/hero_name"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      android:layout_marginTop="8dp"
      android:layout_marginStart="5dp"
      android:textSize="14sp"
      android:text="default type"
      />
  <TextView
      android:id="@+id/hero_desp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/hero_type"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      android:layout_marginTop="8dp"
      android:layout_marginStart="5dp"
      android:textSize="14sp"
      android:text="default desption....."
      />

  <!--<View
      android:id="@+id/hero_checkbox"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="#FF8C00"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginEnd="22dp"
      />-->

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/hero_checkbox_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="15dp"
      >
    <View
        android:id="@+id/hero_checkbox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#FF8C00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="22dp"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>