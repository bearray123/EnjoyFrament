<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <ImageView
      android:id="@+id/hero_img"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/hero_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      android:textSize="16sp"
      android:text="default name"
      />
  <TextView
      android:id="@+id/hero_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/hero_name"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      android:layout_marginTop="8dp"
      android:textSize="16sp"
      android:text="default type"
      />

  <TextView
      android:id="@+id/hero_desp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/hero_type"
      app:layout_constraintLeft_toRightOf="@id/hero_img"
      android:layout_marginTop="8dp"
      android:textSize="16sp"
      android:text="default desption....."
      />

</androidx.constraintlayout.widget.ConstraintLayout>